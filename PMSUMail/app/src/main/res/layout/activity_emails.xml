<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".EmailsActivity">
    <Button
        android:id="@+id/contact_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact" />
    <Button
        android:id="@+id/contacts_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contacts" />
    <Button
        android:id="@+id/create_contact_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Contact" />
    <Button
        android:id="@+id/email_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email" />
    <Button
        android:id="@+id/create_email_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Email" />
    <Button
        android:id="@+id/create_folder_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Folder" />
    <Button
        android:id="@+id/folder_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Folder" />

    <Button
        android:id="@+id/folders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Folders" />
    <Button
        android:id="@+id/profile_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile" />
    <Button
        android:id="@+id/settings_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setings" />

</LinearLayout>
